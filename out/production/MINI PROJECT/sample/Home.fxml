<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Home">
   <children>
      <Pane prefHeight="500.0" prefWidth="900.0">
         <children>
            <ImageView fitHeight="112.0" fitWidth="125.0" layoutX="390.0" layoutY="29.0">
               <image>
                  <Image url="@Corona.jpg" />
               </image>
            </ImageView>
            <Label layoutX="38.0" layoutY="146.0" prefHeight="27.0" prefWidth="161.0" text="Rules of COVID-19" textFill="#707070">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="43.0" layoutY="195.0" prefHeight="20.0" prefWidth="111.0" text="1)Wear a mask" textFill="#707070">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="43.0" layoutY="229.0" prefHeight="20.0" prefWidth="283.0" text="2)Stand at least 1m apart from each other" textFill="#707070">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="42.0" layoutY="263.0" prefHeight="20.0" prefWidth="350.0" text="3)Do not loiter around school premises, public areas" textFill="#707070">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="27.0" layoutY="322.0" prefHeight="17.0" prefWidth="717.0" text="If you have found anybody violating these COVID-19 rules, please click the button below to detect/report to local authorities." textFill="#707070">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="157.0" layoutY="342.0" prefHeight="17.0" prefWidth="408.0" text="Your contribution plays a pivoltal role in curbing COVID-19 cases down." textFill="#707070">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="detect" layoutX="379.0" layoutY="380.0" mnemonicParsing="false" onMousePressed="#detectAction" prefHeight="25.0" prefWidth="181.0" style="-fx-background-color: #F22020;" text="Detect Now" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="report" layoutX="381.0" layoutY="430.0" mnemonicParsing="false" onMousePressed="#reportAction" prefHeight="25.0" prefWidth="181.0" style="-fx-background-color: #F22020;" text="Report Now" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="logout" layoutX="36.0" layoutY="18.0" mnemonicParsing="false" onMousePressed="#logoutAction" prefHeight="25.0" prefWidth="56.0" text="Logout" />
            <Button fx:id="lbl_close" layoutX="844.0" layoutY="14.0" mnemonicParsing="false" onMousePressed="#closeAction" style="-fx-background-color: #F22020;" text="X" textFill="WHITE" />
            <Button fx:id="lbl_min" layoutX="759.0" layoutY="14.0" mnemonicParsing="false" onMousePressed="#minAction" style="-fx-background-color: #FFDF00;" text="_" textFill="WHITE" />
            <Button fx:id="lbl_max" layoutX="799.0" layoutY="14.0" mnemonicParsing="false" onMousePressed="#maxAction" prefHeight="25.0" prefWidth="23.0" style="-fx-background-color: #228b22;" text="[]" textFill="WHITE" />
         </children>
      </Pane>
   </children>
</AnchorPane>
